{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vibe Project Configuration",
  "description": "Schema for vibe-coded project configuration",
  "type": "object",
  "required": ["metadata", "audience", "features", "technical"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name", "type", "domain", "description"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "type": { 
          "type": "string", 
          "enum": ["web-app", "game", "tool", "dashboard", "api", "mobile-app"] 
        },
        "domain": { 
          "type": "string", 
          "enum": ["productivity", "entertainment", "education", "ecommerce", "healthcare", "finance", "other"] 
        },
        "description": { "type": "string", "minLength": 10, "maxLength": 200 },
        "status": { 
          "type": "string", 
          "enum": ["planning", "development", "testing", "production"],
          "default": "planning"
        }
      }
    },
    "audience": {
      "type": "object",
      "required": ["primary"],
      "properties": {
        "primary": {
          "type": "object",
          "required": ["demographics", "technicalLevel"],
          "properties": {
            "demographics": { "type": "string" },
            "technicalLevel": { 
              "type": "string", 
              "enum": ["beginner", "intermediate", "expert"] 
            },
            "devices": {
              "type": "array",
              "items": { "enum": ["desktop", "mobile", "tablet"] },
              "default": ["desktop", "mobile"]
            },
            "usageFrequency": { 
              "type": "string", 
              "enum": ["daily", "weekly", "monthly", "occasional"] 
            }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "required": ["core"],
      "properties": {
        "core": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "name", "description", "priority"],
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "priority": { 
                "type": "string", 
                "enum": ["critical", "high", "medium", "low"] 
              },
              "complexity": { 
                "type": "string", 
                "enum": ["simple", "moderate", "complex"] 
              },
              "estimatedHours": { "type": "number", "minimum": 0 }
            }
          }
        }
      }
    },
    "technical": {
      "type": "object",
      "required": ["stack"],
      "properties": {
        "stack": {
          "type": "object",
          "properties": {
            "frontend": { 
              "type": "string", 
              "enum": ["react", "vue", "svelte", "vanilla"] 
            },
            "backend": { 
              "type": "string", 
              "enum": ["node", "python", "go", "none"] 
            },
            "database": { 
              "type": "string", 
              "enum": ["postgresql", "mongodb", "sqlite", "none"] 
            }
          }
        }
      }
    },
    "ai": {
      "type": "object",
      "properties": {
        "context": {
          "type": "object",
          "properties": {
            "businessLogic": { "type": "string" },
            "userWorkflows": { "type": "string" },
            "constraints": { "type": "string" },
            "priorities": { "type": "string" }
          }
        }
      }
    }
  }
}
